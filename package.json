{
  "name": "nuts-n-bolts",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "pa11y": "wait-on http-get://localhost:4200 && pa11y - standard WCAG2AA http://localhost:4200",
    "pa11y-ci": "wait-on http-get://localhost:4200 && pa11y-ci",
    "pa11y-ci:sitemap": "wait-on http-get://localhost:4200 && wait-on http-get://localhost:8080 && pa11y-ci --sitemap http://localhost:8080",
    "sitemap": "http-server src/assets/nuts-n-bolts_sitemap.xml",
    "a11y-check": "npm-run-all -p start sitemap pa11y-ci:sitemap"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.0.2",
    "@angular/common": "~12.0.2",
    "@angular/compiler": "~12.0.2",
    "@angular/core": "~12.0.2",
    "@angular/forms": "~12.0.2",
    "@angular/platform-browser": "~12.0.2",
    "@angular/platform-browser-dynamic": "~12.0.2",
    "@angular/router": "~12.0.2",
    "faker": "^5.5.3",
    "rxjs": "~6.6.0",
    "tachyons": "^4.12.0",
    "tslib": "^2.1.0",
    "wait-on": "^6.0.0",
    "yarn": "^1.22.10",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.0.2",
    "@angular/cli": "~12.0.2",
    "@angular/compiler-cli": "~12.0.2",
    "@types/faker": "^5.5.7",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^12.11.1",
    "husky": "^7.0.1",
    "jasmine-core": "~3.7.0",
    "karma": "~6.3.14",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "typescript": "~4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn a11y-check"
    }
  }
}
